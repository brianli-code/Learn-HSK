{
    "name": "hsk3-electron-app",
    "version": "1.0.0",
    "description": "HSK 3 Flashcards & Quiz",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dist": "electron-builder",
        "build:css": "npx @tailwindcss/cli -i ./renderer/style.css -o ./renderer/output.css --watch"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.21",
        "electron": "^36.2.1",
        "electron-builder": "^26.0.12",
        "postcss": "^8.5.3",
        "tailwindcss": "^4.1.7"
    },
    "dependencies": {
        "@google-cloud/text-to-speech": "^6.0.1",
        "@google-cloud/translate": "^9.0.1",
        "@shadcn/ui": "^0.0.4",
        "formdata-polyfill": "^4.0.10",
        "node-fetch": "^2.7.0"
    },
    "build": {
        "appId": "com.yourname.learnhsk",
        "productName": "Learn-HSK",
        "directories": {
            "output": "dist",
            "buildResources": "build"
        },
        "files": [
            "main.js",
            "package.json",
            "renderer/**/*"
        ],
        "win": {
            "icon": "build/icon.ico",
            "target": [
                "nsis"
            ]
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Learn-HSK"
        },
        "mac": {
            "icon": "build/icon.icns",
            "target": [
                "dmg",
                "zip"
            ]
        },
        "linux": {
            "icon": "build/png",
            "target": [
                "AppImage",
                "deb"
            ]
        }
    }
}
